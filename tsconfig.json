{
    "extends": "@gravity-ui/tsconfig",
    "compilerOptions": {
        "allowJs": true,
        "outDir": "build/esm",
        "module": "esnext",
        "jsx": "react",
        "baseUrl": ".",
        "resolveJsonModule": true,
        "importHelpers": true,
        "verbatimModuleSyntax": true,
        "paths": {
            "~playwright/*": [
                "playwright/*"
            ]
        },
        "noErrorTruncation": true
    },
    "include": [
        "src/**/*.ts",
        "src/**/*.tsx",
        "test-utils/*"
    ]
}
