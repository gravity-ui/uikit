{
    "extends": "@gravity-ui/tsconfig",
    "compilerOptions": {
        "allowJs": true,
        "outDir": "build/esm",
        "module": "esnext",
        "jsx": "react",
        "baseUrl": ".",
        "resolveJsonModule": true,
        "importHelpers": true,
        "importsNotUsedAsValues": "error"
    },
    "include": [
        "src/**/*.ts",
        "src/**/*.tsx",
        "test-utils/setup-tests-after.ts"
    ]
}
